.highcharts-title
	font-size 1em !important

.fila2
	margin-top 30px
	margin-bottom 70px
.tabla-productor
	background-color blanco
	border 2px solid #d1d1d1
	padding 0px
	font-size 0.9em
	th
		color naranja
		text-align center
		border-right 2px solid #d1d1d1
		&:last-child
			border-right 0px
	tr
		border-bottom 2px solid #d1d1d1
		text-align center
		vertical-align middle
		td
			border-right 2px solid #d1d1d1
