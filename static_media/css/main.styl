/*variables*/

verdetierno = #93c55e
grisemioscuro = #564843
blanco = #fff
negro = #333
gris = #ccc8c7
naranja = #ed6d16

redondeado()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	-o-border-radius arguments
	border-radius arguments
  
sombras()
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	-o-border-radius arguments
	box-shadow arguments
	
cover()
	-webkit-background-size arguments
	-moz-background-size arguments
	-o-background-size arguments
	background-size arguments
	
body
	margin 0 auto
	font-family 'Open Sans', sans-serif
	font-size 16px
	background-color #f7f3f0
header
	background-color verdetierno

	p
		margin 20px 0px
		padding 0px 30px
	.eli-pad
		padding-left 0px
		padding-right 0px
		p
			font-weight bold
			color blanco
			font-size 1em
.img-logo 
	img
		margin-left: -15px !important;		
.footer
	background-color grisemioscuro
	font-weight bold
	font-size 0.9em
.text-muted
	color #A6A6A6

.simas
	text-align right
	p
		color white
	a
		color verdetierno
/*****filtro index******/
.filtro-index
	background linear-gradient(rgba(58, 47, 44, 0.8), rgba(58, 47, 44, 0.8)
    ),

    url('/static/img/textura-01.png')
	padding 10px
	
.styled-select
	redondeado 5px
	border 2px solid #796f6b
	padding-top 10px
	padding-bottom 10px
		
#id_sexo
	margin-left 10px
#id_organizacion,#id_sexo
	background gris
	width 100%
	padding 5px
	font-size 16px
	line-height 1
	border-radius 0
	height 34px
	-webkit-appearance none
	background gris url("https://cdn3.iconfinder.com/data/icons/faticons/32/arrow-down-01-16.png") no-repeat right center
	background-position 95% 50%
.btn-filtro
	background-color naranja
	redondeado 0px
	color blanco
	font-weight bold
	padding 6px 40px
	&:hover
	&:focus
		color blanco
.eliminar-mar
	margin 0px


.contenedor-index
	background linear-gradient(rgba(0,104,55, 0.5), rgba(0,104,55, 0.5)
    ),

    url('/static/img/fondo.JPG')
	cover cover
	background-repeat no-repeat
	.filtro-index
		margin 0px

.info-index
	margin-top 180px
	margin-bottom 180px
	padding 25px
	text-align center
	background-color rgba(117,197,94, 0.5)
	color blanco
	font-size 0.9em
	hr
		width 50%

.slider
	margin-bottom 10px
