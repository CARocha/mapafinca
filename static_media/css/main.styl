.breadcrumb>li+li:before
	content: ">";

/***********tablero***********/
	
.mapa-general
	border 2px solid #d1d1d1
	background-color blanco
	padding 0px
.btn-tgeneral
	padding 13px
	background-color verdetierno
	redondeado 0px
	border 0px
	color blanco
	font-weight bold
	margin 30px auto
	width 85%
	sombras 5px 5px 0px -2px #88b84f
	&:hover
		background-color naranja
		sombras 5px 5px 0px -2px #D46325
